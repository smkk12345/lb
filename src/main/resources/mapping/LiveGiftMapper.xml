        <include refid="Base_Column_List" />
        from live_gift
        where isdel = '0'
        <if test="liveGift.giftid != null and liveGift.giftid != ''" >
            AND giftid = #{liveGift.giftid}
        </if>
        <if test="liveGift.title != null and liveGift.title != ''" >
            AND title LIKE concat(concat('%',#{liveGift.title}),'%')
